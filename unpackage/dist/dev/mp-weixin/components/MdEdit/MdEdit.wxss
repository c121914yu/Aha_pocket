.mdeditor {
  box-sizing: border-box;
  height: 100vh;
  padding: 30rpx;
  padding-bottom: 120rpx;
}
.mdeditor .editor {
  height: 100%;
  font-size: 32rpx;
  width: 100%;
}
.mdeditor .tools {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  background: #eee;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
}

