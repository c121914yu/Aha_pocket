}
.up-resource .author .input {
  display: grid;
  grid-template-columns: 2fr 3fr;
  grid-gap: 10px;
}
.up-resource .files .remark {
  font-size: 28rpx;
  color: var(--gray);
}
.up-resource .files .list {
  border: 1px solid var(--origin4);
  border-radius: 10px;
}
.up-resource .files .list .file {
  position: relative;
  padding: 5px;
  border-bottom: 1px dotted var(--origin4);
}
.up-resource .files .list .file:last-of-type {
  border: 0;
}
.up-resource .files .list .file .file-info {
  width: calc(100% - 30px);
  white-space: pre-wrap;
}
.up-resource .files .list .file .file-info .size {
  color: var(--origin4);
  text-align: end;
}
.up-resource .files .list .file .remove {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 5rpx;
}
.up-resource .description textarea {
  margin: 5px auto;
  width: 100%;
  min-height: 100px;
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: var(--origin2);
}
.up-resource .publish {
  margin: 10px auto;
  background-color: var(--button-bg);
