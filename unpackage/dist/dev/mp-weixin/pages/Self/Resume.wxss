}
.resume .card .item .input {
  padding: 0 15rpx;
  background-color: var(--origin3);
  -webkit-border-radius: 20px;
          border-radius: 20px;
  font-size: 28rpx;
}
.resume .card textarea {
  margin-top: 15rpx;
  width: 100%;
  padding: 15rpx;
  background-color: var(--origin3);
  -webkit-border-radius: 15px;
          border-radius: 15px;
  font-size: 28rpx;
}
.resume .card .add-btn {
  margin-top: 30rpx;
  border: 1px solid var(--origin2);
  background-color: transparent;
  color: var(--origin2);
  font-size: 28rpx;
  padding: 5rpx;
}
.resume .card .list-itme {
  position: relative;
  margin-bottom: 0 30px;
  border-bottom: 2px dotted var(--origin2);
/* 删除图标 */
/* 最后一项不加边框 */
}
.resume .card .list-itme .remove {
  position: absolute;
  right: -20rpx;
  top: 0;
  color: #e86452;
  font-size: 40rpx;
}
.resume .card .list-itme:last-of-type {
  border: none;
}
